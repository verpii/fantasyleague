<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="fantasyleague.V.HomePage"
             xmlns:loc="clr-namespace:fantasyleague.V"
             xmlns:vm="clr-namespace:fantasyleague.VM"
             Title="HomePage">

    <ContentPage.BindingContext>
        <vm:HomeViewModel/>
    </ContentPage.BindingContext>
    <VerticalStackLayout Spacing="20" Padding="30" HorizontalOptions="Center" VerticalOptions="Center">

        
        
        <Button Text="My Team" 
                Command="{Binding NavigateToMyTeamCommand}"
                BackgroundColor="#2E7D32"
                TextColor="White"
                FontSize="16"
                HeightRequest="50"
                WidthRequest="200"
                CornerRadius="10"/>

        <Button Text="Player Market" 
                Command="{Binding NavigateToMarketCommand}"
                BackgroundColor="#1565C0"
                TextColor="White"
                FontSize="16"
                HeightRequest="50"
                WidthRequest="200"
                CornerRadius="10"/>

        


    </VerticalStackLayout>
</ContentPage>